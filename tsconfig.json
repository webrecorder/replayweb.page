{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/**/*.ts"
  ]
}